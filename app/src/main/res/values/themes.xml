<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_semi_dark</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/purple_semi_dark</item>
        <item name="colorOnSecondary">@color/purpure</item>

        <item name="colorAccent">@color/white</item>
        <item name="colorSurface">@color/purple_semi_dark</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
    </style>


    <!--  Typography  -->
    <style name="Text" parent="Base.Widget.MaterialComponents.TextView" />

    <style name="Text.Regular">
        <item name="fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="Text.Bold.Small">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="Text.Bold.Medium">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Text.Bold.Large">
        <item name="android:textSize">@dimen/_17sp</item>
    </style>

    <style name="Text.Bold.XLarge">
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="Text.Bold.XXLarge">
        <item name="android:textSize">@dimen/_36sp</item>
    </style>


    <style name="Text.Regular.Small">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="Text.Regular.Medium">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Text.Regular.Large">
        <item name="android:textSize">@dimen/_17sp</item>
    </style>

    <style name="Text.Regular.XLarge">
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="Text.Regular.XXLarge">
        <item name="android:textSize">@dimen/_36sp</item>
    </style>


    <style name="Text.SemiBold.Small">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="Text.SemiBold.Medium">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Text.SemiBold.Large">
        <item name="android:textSize">@dimen/_17sp</item>
    </style>

    <style name="Text.SemiBold.XLarge">
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="Text.SemiBold.XXLarge">
        <item name="android:textSize">@dimen/_36sp</item>
    </style>
</resources>